<decorators defaultdir="/layouts">
    <excludes>
        <pattern>/40*.jsp</pattern>
        <pattern>/*ajax=true*</pattern>
        <pattern>/resources/*</pattern>
    </excludes> 
    <decorator name="default" page="default.jsp">
        <pattern>/*</pattern>
    </decorator>
    <decorator name="private" page="private.jsp" >
    	<pattern>/home</pattern>
    	<pattern>/*/*</pattern>
    </decorator>
</decorators>